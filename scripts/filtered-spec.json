      "CardResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "[a-f0-9]{24}"
          },
          "title": {
            "type": "string"
          },
          "height": {
            "type": "number"
          },
          "elements": {
            "type": "array",
            "items": {
              "oneOf": [
