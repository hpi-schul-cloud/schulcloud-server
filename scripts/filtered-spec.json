      "MoveCardBodyParams": {
        "type": "object",
        "properties": {
          "toColumnId": {
            "type": "string",
            "nullable": false
          },
          "toPosition": {
            "type": "number",
            "nullable": false
          }
        },
        "required": [
          "toColumnId",
          "toPosition"
        ]
      },
      "SetHeightBodyParams": {
        "type": "object",
        "properties": {
          "height": {
            "type": "number",
            "nullable": false
          }
        },
        "required": [
          "height"
        ]
      },
      "CreateContentElementBodyParams": {
        "type": "object",
        "properties": {
          "type": {
            "description": "The type of element",
            "nullable": false,
            "$ref": "#/components/schemas/ContentElementType"
          },
          "toPosition": {
            "type": "number",
