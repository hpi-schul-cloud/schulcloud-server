{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "typeRoots": [
      "./types"
    ],
    "paths": {}
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "test/**/*",
    "config/*",
    "package.json",
    "src/**/*.test.js",
    "src/**/*.test.ts"
  ]
}