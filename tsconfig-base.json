{
	"compileOnSave": true,
	"compilerOptions": {
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"baseUrl": "./",
		"incremental": true,
		"allowJs": true,
		"esModuleInterop": true,
		"lib": ["ES2020", "DOM"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"strict": true,
		"typeRoots": ["./types"],
		"paths": {}
	}
}
