apiVersion: apps/v1
kind: Deployment
metadata:
  name: management-deployment
  namespace: {{ NAMESPACE }}
  labels:
    app: management-deployment
    app.kubernetes.io/part-of: schulcloud-verbund
spec:
  replicas: {{ API_MANAGEMENT_REPLICAS|default("1", true) }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
  revisionHistoryLimit: 4
  paused: false
  selector:
    matchLabels:
      app: management-deployment
  template:
    metadata:
      labels:
        app: management-deployment
        app.kubernetes.io/part-of: schulcloud-verbund
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
        runAsNonRoot: true
      affinity:
        podAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: app.kubernetes.io/part-of
                  operator: In
                  values:
                  - schulcloud-verbund
              topologyKey: "kubernetes.io/hostname"
      containers:
      - name: api
        image: {{ SCHULCLOUD_SERVER_IMAGE }}:{{ SCHULCLOUD_SERVER_IMAGE_TAG }}
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 3333
          name: mgmt-api
          protocol: TCP
        envFrom:
        - configMapRef:
            name: api-configmap
        - secretRef:
            name: api-secret
        command: ['npm', 'run', 'nest:start:management:prod']
        readinessProbe:
          httpGet:
            path: /api/docs
            port: 3333
          timeoutSeconds: 4
          failureThreshold: 3
          periodSeconds: 5
        # liveless if unsatisfactory reply
        livenessProbe:
          httpGet:
            path: /api/docs
            port: 3333
          timeoutSeconds: 4
          failureThreshold: 3
          periodSeconds: 15
        startupProbe:
          httpGet:
            path: /api/docs
            port: 3333
          timeoutSeconds: 4
          failureThreshold:  36
          periodSeconds: 5
        resources:
          limits:
            cpu: {{ API_MANAGEMENT_CPU_LIMITS|default("2000m", true) }}
            memory: {{ API_MANAGEMENT_MEMORY_LIMITS|default("500Mi", true) }}
          requests:
            cpu: {{ API_MANAGEMENT_CPU_REQUESTS|default("100m", true) }}
            memory: {{ API_MANAGEMENT_MEMORY_REQUESTS|default("50Mi", true) }}
