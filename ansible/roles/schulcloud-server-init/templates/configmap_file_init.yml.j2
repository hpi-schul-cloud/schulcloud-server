    mongo $DATABASE__URL --eval 'db.storageproviders.insert( {
                                       "isShared" : true,
                                       "region" : "eu-central-1",
                                       "type" : "S3",
                                       "endpointUrl" : "https://storage-{{ DOMAIN }}",
                                       "accessKeyId" : "'$AWS_ACCESS_KEY'",
                                       "secretAccessKey" : "'$AWS_SECRET_ACCESS_KEY_AES'",
                                       "maxBuckets" : 999999,
                                       "freeBuckets" : 999999,
