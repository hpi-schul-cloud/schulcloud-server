apiVersion: v1
kind: ConfigMap
metadata:
  name: api-db-init-file
  namespace: {{ NAMESPACE }}
  labels:
    app: rocketchat
data:
  update.sh: |
    git clone https://github.com/hpi-schul-cloud/schulcloud-server.git
    cd /schulcloud-server
    mongoimport --uri "$DATABASE__URL" --collection users backup/setup/users.json --jsonArray --drop
    mongoimport --uri "$DATABASE__URL" --collection accounts backup/setup/accounts.json --jsonArray --drop
    mongoimport --uri "$DATABASE__URL" --collection schools backup/setup/schools.json --jsonArray --drop
    mongoimport --uri "$DATABASE__URL" --collection roles backup/setup/roles.json --jsonArray --drop
