apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: api-svc-monitor
  namespace: {{ NAMESPACE }}
  labels:
    app: api
spec:
  selector:
    matchExpressions:
      - key: app.kubernetes.io/name
        operator: in
        values:
          - api-svc
      - key: app.kubernetes.io/name
        operator: in
        values:
          - tldraw-server-svc
  endpoints:
  - path: /metrics
    port: api-metrics
  - path: /tldraw-metrics
    port: tldraw-metrics
