apiVersion: apps/v1
kind: Deployment
metadata:
  name: api-files-amqp-deployment
  namespace: {{ NAMESPACE }}
  labels:
    app: api-files-amqp
spec:
  replicas: {{ API_FILE_STORAGE_REPLICAS|default("1", true) }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      #maxUnavailable: 1
  revisionHistoryLimit: 4
  paused: false
  selector:
    matchLabels:
      app: api-files-amqp
  template:
    metadata:
      labels:
        app: api-files-amqp
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
        runAsNonRoot: true
      containers:
      - name: api-files-amqp
        image: {{ SCHULCLOUD_SERVER_IMAGE }}:{{ SCHULCLOUD_SERVER_IMAGE_TAG }}
        imagePullPolicy: IfNotPresent
        envFrom:
        - configMapRef:
            name: api-configmap
        - secretRef:
            name: api-secret
        command: ['npm', 'run', 'nest:start:files-storage-amqp:prod']
        resources:
          limits:
            cpu: {{ API_FILE_STORAGE_CPU_LIMITS|default("2000m", true) }}
            memory: {{ API_FILE_STORAGE_MEMORY_LIMITS|default("500Mi", true) }}
          requests:
            cpu: {{ API_FILE_STORAGE_CPU_REQUESTS|default("100m", true) }}
            memory: {{ API_FILE_STORAGE_MEMORY_REQUESTS|default("50Mi", true) }}
