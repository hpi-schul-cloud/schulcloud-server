apiVersion: v1
kind: ConfigMap
metadata:
  name: admin-api-server-configmap
  namespace: {{ NAMESPACE }}
  labels:
    app: api-admin
data:
  NODE_OPTIONS: "--max-old-space-size=3072"
  NEST_LOG_LEVEL: "info"
  ADMIN_API__PORT: "4030"
  FEATURE_PROMETHEUS_METRICS_ENABLED: "true"
  ROCKET_CHAT_URI: "http://rocketchat-svc:5000"
  SC_DOMAIN: "{{ DOMAIN }}"