apiVersion: v1
kind: Service
metadata:
  name: api-svc
  namespace: {{ NAMESPACE }}
  labels:
    app: api
spec:
  type: ClusterIP
  ports:
    - port: {{ PORT_SERVER }}
      targetPort: 3030
      protocol: TCP
      name: api
    - port: {{ PORT_METRICS_SERVER }}
      targetPort: 9090
      protocol: TCP
      name: api-metrics
  selector:
    app: api
