apiVersion: apps/v1
kind: Deployment
metadata:
  name: api-files-deployment
  namespace: {{ NAMESPACE }}
  labels:
    app: api-files
{% if DOF_APP_DEPLOY_IMAGE_TAG is defined %}
    cfgVersion: {{ DOF_APP_DEPLOY_IMAGE_TAG }}
{% endif  %}
spec:
  replicas: {{ API_FILE_STORAGE_REPLICAS|default("1", true) }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      #maxUnavailable: 1
  revisionHistoryLimit: 4
  paused: false
  selector:
    matchLabels:
      app: api-files
  template:
    metadata:
      labels:
        app: api-files
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
        runAsNonRoot: true
      containers:
      - name: api-files
        image: {{ SCHULCLOUD_SERVER_IMAGE }}:file-storage-{{ SCHULCLOUD_SERVER_IMAGE_TAG }}
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 4444
          name: api-files
          protocol: TCP
        envFrom:
        - configMapRef:
            name: api-configmap
        - secretRef:
            name: api-secret
        command: ['npm', 'run', 'nest:start:files-storage:prod']
        readinessProbe:
          httpGet:
            path: api/v3/docs
            port: 4444
          timeoutSeconds: 4
          failureThreshold: 3
          periodSeconds: 5
        # liveless if unsatisfactory reply
        livenessProbe:
          httpGet:
            path: api/v3/docs
            port: 4444
          timeoutSeconds: 4
          failureThreshold: 3
          periodSeconds: 15
        startupProbe:
          httpGet:
            path: api/v3/docs
            port: 4444
          timeoutSeconds: 4
          failureThreshold:  36
          periodSeconds: 5
        resources:
          limits:
            cpu: {{ API_FILE_STORAGE_CPU_LIMITS|default("2000m", true) }}
            memory: {{ API_FILE_STORAGE_MEMORY_LIMITS|default("500Mi", true) }}
          requests:
            cpu: {{ API_FILE_STORAGE_CPU_REQUESTS|default("100m", true) }}
            memory: {{ API_FILE_STORAGE_MEMORY_REQUESTS|default("50Mi", true) }}
