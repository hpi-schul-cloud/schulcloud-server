apiVersion: v1
kind: Service
metadata:
  name: api-ldap-svc
  namespace: {{ NAMESPACE }}
  labels:
    app: api-ldap
  annotations:
    prometheus.io/scrape: 'true'
    prometheus.io/port: '3030'
spec:
  type: ClusterIP
  ports:
    - port: {{ PORT_SERVER }}
      targetPort: 3030
      protocol: TCP
      name: api-ldap
  selector:
    app: api-ldap
